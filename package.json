{
  "name": "clevelandofficemovers.com",
  "version": "1.0.0",
  "description": "Website for ClevelandOfficeMovers.com",
  "homepage": "https://github.com/pettazz/clevelandofficemovers.com#readme",
  "bugs": {
    "url": "https://github.com/pettazz/clevelandofficemovers.com/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pettazz/clevelandofficemovers.com.git"
  },
  "license": "GPL-3.0-or-later",
  "author": "@pettazz",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "clean": "rm -r _site/ assets/css/dist.css",
    "jekyll-serve": "bundle exec jekyll serve",
    "jekyll-build": "bundle exec jekyll build",
    "tailwind-watch": "tailwindcss -i ./_css/main.css -o ./assets/css/dist.css --watch --map",
    "tailwind-build": "tailwindcss -i ./_css/main.css -o ./assets/css/dist.css -m",
    "start": "TAILWIND_MODE=watch NODE_ENV=development npm-run-all --parallel jekyll-serve tailwind-watch",
    "build": "npm-run-all clean tailwind-build jekyll-build"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
